<%- include("partials/header") %>
<%- include("partials/navbar") %>
<div class="d-flex flex-row justify-content-center">
    <form class="w-50 mt-3 d-flex flex-column align-items-center row g-3 needs-validation" novalidate action="<%= isUpdate ? `/tasks/${task.id}/update` : '/tasks/new' %>" method="post">
        <h2 class="text-center mt-3">Cadastrar nova receita</h2>
        <div class="mb-3">
            <label for="tipo" class="form-label">Tipo</label>
            <select id="tipo" class="form-select" required>
              <option value="">Selecione...</option>
              <option value="receita">Receita</option>
              <option value="despesa">Despesa</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="valor" class="form-label">Valor</label>
            <input type="number" id="valor" class="form-control" step="0.01" placeholder="Digite o valor" required>
        </div>
        <div class="mb-3">
            <label for="data" class="form-label">Data</label>
            <input type="date" id="data" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
        <% if(showError == true) { %>
            <p style="color: red;">Por favor, preencha o formul√°rio corretamente.</p>
        <% } %>
    </form>

</div>
<%- include("partials/footer") %>