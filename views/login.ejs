<%- include("partials/header") %>

<main class="container vh-100 d-flex">
    <form class="w-25 m-auto" action="/login" method="post">
        <img
            src="/public/img/chroniccler-logo.png"
            class="mb-3 w-50 d-flex mx-auto"
        />
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label"
                >E-mail</label>
            <input
                type="email"
                class="form-control"
                id="exampleInputEmail1"
                name="email"
                aria-describedby="emailHelp"
            />
            <div id="emailHelp" class="form-text">
                Nós nunca iremos compartilhar seu endereço de e-mail com
                mais ninguém.
            </div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label"
                >Senha</label
            >
            <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                name="password"
            />
        </div>
        <div class="mb-3 form-check">
            <input
                type="checkbox"
                class="form-check-input"
                id="exampleCheck1"
                name="remember"
            />
            <label class="form-check-label" for="exampleCheck1">Mantenha-me conectado</label>
        </div>
        <% if(showError) { %>
            <% if(tipoErro == 1){ %>
                <p style="color: red;">Por favor, preencha o formulário corretamente</p>
            <% }else if(tipoErro == 2){ %>
                <p style="color: red;">Ainda não há um usuário cadastrado com esse Email. Registre-se</p>
            <% }else if(tipoErro == 3){ %>
                <p style="color: red;">Senha incorreta</p>
            <% } %>
        <% } %>
        <div class="mb-3">
            <p>
                <a class="link-opacity-50-hover" href="/register">Registre-se</a>
            </p>
        </div>
        <button type="submit" class="btn btn-primary w-100">
            Entrar
        </button>
    </form>
</main>

<%- include("partials/footer") %>
